+    static auto* const PGRADIENT = (Hyprlang::INT* const*)HyprlandAPI::getConfigValue(PHANDLE, "plugin:hyprbars:bar_gradient_to")->getDataStaticPtr();
+    return CHyprColor(**PGRADIENT);
+}
