{
  "position": "top",
  "height": 35,
  "start": [
    {
      "type": "workspaces",
      "sort": "name",
      "all_monitors": false,
      "hidden": ["special:clipboard", "special:dropdown", "special:launcher"],
      "format": "{label}",
      "show_window_icons": true,
      "icon_size": 20
    },
    {
      "type": "focused",
      "show_icon": false,
      "show_title": true,
      "justify": "left",
      "truncate": {
        "mode": "end",
        "max_length": 60
      }
    }
  ],
  "end": [
    {
      "type": "tray",
      "icon_size": 20
    },
    {
      "type": "battery",
      "format": "{percentage}%",
      "show_icon": false,
      "show_progress": true,
      "profiles": {
        "low": { "when": { "percent": 20 } },
        "medium": { "when": { "percent": 50 } },
        "good": { "when": { "percent": 100 } },
        "charging": { "when": { "percent": 100, "charging": true } }
      }
    },
    {
      "type": "clock",
      "format": "%H:%M"
    }
  ]
}
