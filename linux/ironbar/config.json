{
  "position": "top",
  "layer": "bottom",
  "height": 35,
  "start": [
    {
      "type": "workspaces",
      "sort": "name",
      "all_monitors": false,
      "hidden": ["special:clipboard", "special:dropdown", "special:launcher", "special:minimized"],
      "format": "{label}",
      "show_window_icons": true,
      "icon_size": 20
    },
    {
      "type": "focused",
      "show_icon": false,
      "show_title": true,
      "justify": "left",
      "truncate": {
        "mode": "end",
        "max_length": 60
      }
    }
  ],
  "end": [
    {
      "type": "label",
      "class": "minimized",
      "name": "minimized",
      "label": "#minimized_count",
      "show_if": "#minimized_visible",
      "on_click_left": "/home/andrei/dev/nixos-config/linux/hyprland/scripts/restore-minimized.sh"
    },
    {
      "type": "tray",
      "icon_size": 20,
      "sort": ["cpu-monitor", "mem-monitor", "net-rx-monitor", "net-tx-monitor", "caffeine", "mullvad-tray", "nm-applet", "blueman", "battery-tray"]
    },
    {
      "type": "battery",
      "format": "{percentage}",
      "show_icon": false,
      "show_progress": false,
      "profiles": {
        "charging": { "when": { "percent": 100, "charging": true }, "format": "{percentage}" }
      }
    },
    {
      "type": "clock",
      "format": "%H:%M"
    },
    {
      "type": "custom",
      "class": "power-menu",
      "bar": [{ "type": "button", "name": "power-button", "on_click": "popup:toggle", "widgets": [{ "type": "image", "src": "icon:power", "size": 20 }] }],
      "popup": [
        {
          "type": "box",
          "orientation": "vertical",
          "widgets": [
            { "type": "button", "label": "Lock", "on_click": "!hyprlock", "name": "power-lock" },
            { "type": "button", "label": "Suspend", "on_click": "!systemctl suspend", "name": "power-suspend" },
            { "type": "button", "label": "Reboot", "on_click": "!systemctl reboot", "name": "power-reboot" },
            { "type": "button", "label": "Shutdown", "on_click": "!systemctl poweroff", "name": "power-shutdown" }
          ]
        }
      ]
    }
  ]
}
