{
  "layer": "top",
  "position": "top",
  "height": 36,
  "spacing": 0,
  "exclusive": true,
  "gtk-layer-shell": true,

  "modules-left": [
    "hyprland/workspaces",
    "custom/separator",
    "hyprland/window"
  ],

  "modules-center": [],

  "modules-right": [
    "custom/caffeine",
    "custom/dictate",
    "tray",
    "custom/tailscale",
    "pulseaudio",
    "custom/brightness",
    "custom/kbd-backlight",
    "cpu",
    "memory",
    "battery",
    "clock"
  ],

  "hyprland/workspaces": {
    "format": "{name} {windows}",
    "format-window-separator": " ",
    "window-rewrite-default": "○",
    "window-rewrite": {
      "firefox": "󰈹",
      "chromium": "󰊯",
      "google-chrome": "󰊯",
      "brave": "󰖟",
      "code": "󰨞",
      "code-url-handler": "󰨞",
      "footclient": "󰆍",
      "foot": "󰆍",
      "ghostty": "󰆍",
      "kitty": "󰆍",
      "alacritty": "󰆍",
      "wezterm": "󰆍",
      "org.kde.dolphin": "󰉋",
      "nautilus": "󰉋",
      "thunar": "󰉋",
      "spotify": "󰓇",
      "discord": "󰙯",
      "slack": "󰒱",
      "org.telegram.desktop": "󰭹",
      "evolution": "󰇮",
      "sublime_text": "󰷈",
      "sublime_merge": "󰊢",
      "mpv": "󰎁",
      "vlc": "󰕼",
      "gimp": "󱇣",
      "inkscape": "󰕙",
      "libreoffice": "󰏆",
      "obsidian": "󰎚",
      "zathura": "󰈙",
      "evince": "󰈙"
    },
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "sort-by-number": true
  },

  "hyprland/window": {
    "format": "{title}",
    "max-length": 60,
    "separate-outputs": true,
    "rewrite": {
      "(.*) — Mozilla Firefox": "󰈹 $1",
      "(.*) - Google Chrome": "󰊯 $1",
      "(.*) - Visual Studio Code": "󰨞 $1",
      "(.*) - Sublime Text": "󰷈 $1"
    }
  },

  "tray": {
    "icon-size": 18,
    "spacing": 12,
    "show-passive-items": true
  },

  "clock": {
    "interval": 60,
    "format": "{:%H:%M}",
    "format-alt": "{:%A, %B %d, %Y}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },

  "cpu": {
    "interval": 2,
    "format": "󰻠",
    "states": {
      "warning": 70,
      "critical": 90
    },
    "tooltip": true,
    "on-click": "footclient --app-id=btop-float -e btop"
  },

  "memory": {
    "interval": 2,
    "format": "󰍛",
    "states": {
      "low": 30,
      "medium": 50,
      "high": 70,
      "warning": 85,
      "critical": 95
    },
    "tooltip": true,
    "tooltip-format": "RAM: {used:0.1f}GB / {total:0.1f}GB\nSwap: {swapUsed:0.1f}GB / {swapTotal:0.1f}GB",
    "on-click": "footclient --app-id=btop-float -e btop"
  },

  "battery": {
    "interval": 10,
    "states": {
      "critical": 15,
      "warning": 30,
      "low": 50,
      "good": 70,
      "full": 90
    },
    "format": "{icon} {capacity}%",
    "format-charging": "󰂄 {capacity}%",
    "format-plugged": "󰚥 {capacity}%",
    "format-full": "󰁹",
    "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "tooltip": true,
    "tooltip-format": "{capacity}%\n{timeTo}\nPower: {power}W"
  },

  "network": {
    "interval": 2,
    "format-wifi": "{icon}",
    "format-icons": ["󰤯", "󰤟", "󰤢", "󰤥", "󰤨"],
    "format-ethernet": "󰈀",
    "format-linked": "󰈀",
    "format-disconnected": "󰤭",
    "tooltip": true,
    "tooltip-format": "{ifname} via {gwaddr}\n{ipaddr}/{cidr}\nUp: {bandwidthUpBytes} Down: {bandwidthDownBytes}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)\n{ipaddr}/{cidr}\nFreq: {frequency}MHz\nUp: {bandwidthUpBytes} Down: {bandwidthDownBytes}",
    "on-click": "nm-connection-editor"
  },

  "pulseaudio": {
    "scroll-step": 5,
    "format": "{icon}",
    "format-bluetooth": "󰂯",
    "format-bluetooth-muted": "󰂲",
    "format-muted": "󰝟",
    "format-source": "󰍬",
    "format-source-muted": "󰍭",
    "format-icons": {
      "headphone": "󰋋",
      "hands-free": "󰋎",
      "headset": "󰋎",
      "phone": "󰏲",
      "portable": "󰏲",
      "car": "󰄋",
      "default": "󰕾"
    },
    "tooltip": true,
    "tooltip-format": "{desc}\nVolume: {volume}%",
    "on-click": "waybar-slider-popup volume",
    "on-click-right": "pavucontrol",
    "on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
  },

  "custom/separator": {
    "format": "|",
    "tooltip": false
  },

  "custom/tailscale": {
    "exec": "~/.config/waybar/scripts/tailscale-status.sh",
    "return-type": "json",
    "interval": 10,
    "tooltip": true,
    "on-click": "trayscale"
  },

  "custom/brightness": {
    "exec": "~/.config/waybar/scripts/get-brightness.sh",
    "return-type": "json",
    "interval": 2,
    "tooltip": true,
    "on-click": "waybar-slider-popup brightness",
    "on-scroll-up": "brightnessctl set 5%+",
    "on-scroll-down": "brightnessctl set 5%-"
  },

  "custom/kbd-backlight": {
    "exec": "~/.config/waybar/scripts/get-kbd-backlight.sh",
    "return-type": "json",
    "interval": 2,
    "tooltip": true,
    "on-click": "~/.config/waybar/scripts/kbd-backlight-toggle.sh"
  },

  "custom/dictate": {
    "exec": "~/.config/waybar/scripts/dictate-status.sh",
    "return-type": "json",
    "interval": 1,
    "signal": 10,
    "tooltip": true,
    "on-click": "~/bin/dictate toggle"
  },

  "custom/caffeine": {
    "exec": "~/.config/waybar/scripts/caffeine.sh status",
    "return-type": "json",
    "interval": 5,
    "signal": 9,
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/caffeine.sh toggle"
  }
}
