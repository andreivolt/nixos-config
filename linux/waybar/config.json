{
  "battery": {
    "format": "{capacity}",
    "format-charging": "{capacity}",
    "format-full": "100",
    "format-plugged": "{capacity}",
    "interval": 10,
    "states": {
      "s10": 10,
      "s100": 100,
      "s20": 20,
      "s30": 30,
      "s40": 40,
      "s50": 50,
      "s60": 60,
      "s70": 70,
      "s80": 80,
      "s90": 90
    },
    "tooltip": true,
    "tooltip-format": "{capacity}%\n{timeTo}\nPower: {power}W"
  },
  "clock": {
    "calendar": {
      "format": {
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>"
      },
      "mode": "month",
      "mode-mon-col": 3,
      "on-scroll": 1
    },
    "format": "{:%H:%M}",
    "format-alt": "{:%A, %B %d, %Y}",
    "interval": 60,
    "tooltip-format": "<tt><small>{calendar}</small></tt>"
  },
  "cpu": {
    "format": "󰻠",
    "interval": 2,
    "on-click": "footclient --app-id=btop-float -e btop",
    "states": {
      "critical": 90,
      "warning": 70
    },
    "tooltip": true
  },
  "custom/brightness": {
    "exec": "~/.config/waybar/scripts/get-brightness.sh",
    "interval": 2,
    "on-click": "waybar-slider-popup brightness",
    "on-scroll-down": "brightnessctl set 5%-",
    "on-scroll-up": "brightnessctl set 5%+",
    "return-type": "json",
    "tooltip": true
  },
  "custom/caffeine": {
    "exec": "caffeine waybar",
    "interval": 5,
    "on-click": "caffeine toggle",
    "return-type": "json",
    "signal": 9,
    "tooltip": false
  },
  "custom/dictate": {
    "exec": "~/.config/waybar/scripts/dictate-status.sh",
    "interval": 1,
    "on-click": "~/bin/dictate toggle",
    "return-type": "json",
    "signal": 10,
    "tooltip": true
  },
  "custom/kbd-backlight": {
    "exec": "~/.config/waybar/scripts/get-kbd-backlight.sh",
    "interval": 2,
    "on-click": "~/.config/waybar/scripts/kbd-backlight-toggle.sh",
    "return-type": "json",
    "tooltip": true
  },
  "custom/separator": {
    "format": "|",
    "tooltip": false
  },
  "custom/tailscale": {
    "exec": "~/.config/waybar/scripts/tailscale-status.sh",
    "interval": 10,
    "on-click": "trayscale",
    "return-type": "json",
    "tooltip": true
  },
  "exclusive": true,
  "gtk-layer-shell": true,
  "height": 38,
  "hyprland/window": {
    "format": "{title}",
    "max-length": 60,
    "rewrite": {
      "(.*) - Google Chrome": "󰊯 $1",
      "(.*) - Sublime Text": "󰷈 $1",
      "(.*) - Visual Studio Code": "󰨞 $1",
      "(.*) — Mozilla Firefox": "󰈹 $1"
    },
    "separate-outputs": true
  },
  "hyprland/workspaces": {
    "format": "{name}  <span font='15' rise='-2500'>{windows}</span>",
    "format-window-separator": " ",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "sort-by-number": true,
    "window-rewrite": {
      "class<Alacritty>": "󰆍",
      "class<brave-browser>": "󰖟",
      "class<chromium-browser>": "󰊯",
      "class<code>": "󰨞",
      "class<code-url-handler>": "󰨞",
      "class<com.mitchellh.ghostty>": "󰆍",
      "class<de.feschber.LanMouse>": "󰍽",
      "class<dev.zed.Zed>": "󰷈",
      "class<discord>": "󰙯",
      "class<emacs>": "󰯸",
      "class<evince>": "󰈙",
      "class<evolution>": "󰇮",
      "class<firefox>": "󰈹",
      "class<foot>": "󰆍",
      "class<footclient>": "󰆍",
      "class<gimp>": "󱇣",
      "class<google-chrome>": "󰊯",
      "class<imv>": "󰋩",
      "class<kitty>": "󰆍",
      "class<libreoffice>": "󰏆",
      "class<mpv>": "󰎁",
      "class<nautilus>": "󰉋",
      "class<neovide>": "󰆍",
      "class<obsidian>": "󰎚",
      "class<org.inkscape.Inkscape>": "󰕙",
      "class<org.kde.dolphin>": "󰉋",
      "class<org.kde.kdeconnect.app>": "󰄜",
      "class<org.pulseaudio.pavucontrol>": "󰕾",
      "class<org.pwmt.zathura>": "󰈙",
      "class<org.telegram.desktop>": "󰭹",
      "class<org.wezfurlong.wezterm>": "󰆍",
      "class<Slack>": "󰒱",
      "class<Spotify>": "󰓇",
      "class<sublime_merge>": "󰊢",
      "class<sublime_text>": "󰷈",
      "class<thunar>": "󰉋",
      "class<vlc>": "󰕼",
      "class<wasistlos>": "󰖣",
      "title<Picture in picture>": ""
    },
    "window-rewrite-default": "○"
  },
  "layer": "top",
  "memory": {
    "format": "󰘚",
    "interval": 2,
    "on-click": "footclient --app-id=btop-float -e btop",
    "states": {
      "critical": 95,
      "high": 70,
      "low": 30,
      "medium": 50,
      "warning": 85
    },
    "tooltip": true,
    "tooltip-format": "RAM: {used:0.1f}GB / {total:0.1f}GB\nSwap: {swapUsed:0.1f}GB / {swapTotal:0.1f}GB"
  },
  "modules-center": [],
  "modules-left": [
    "hyprland/workspaces",
    "custom/separator",
    "hyprland/window"
  ],
  "modules-right": [
    "tray",
    "custom/caffeine",
    "custom/dictate",
    "custom/tailscale",
    "pulseaudio",
    "custom/brightness",
    "custom/kbd-backlight",
    "cpu",
    "memory",
    "battery",
    "clock"
  ],
  "network": {
    "format-disconnected": "󰤭",
    "format-ethernet": "󰈀",
    "format-icons": [
      "󰤯",
      "󰤟",
      "󰤢",
      "󰤥",
      "󰤨"
    ],
    "format-linked": "󰈀",
    "format-wifi": "{icon}",
    "interval": 2,
    "on-click": "nm-connection-editor",
    "tooltip": true,
    "tooltip-format": "{ifname} via {gwaddr}\n{ipaddr}/{cidr}\nUp: {bandwidthUpBytes} Down: {bandwidthDownBytes}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)\n{ipaddr}/{cidr}\nFreq: {frequency}MHz\nUp: {bandwidthUpBytes} Down: {bandwidthDownBytes}"
  },
  "position": "top",
  "pulseaudio": {
    "format": "{icon}",
    "format-bluetooth": "󰂯",
    "format-bluetooth-muted": "󰂲",
    "format-icons": {
      "car": "󰄋",
      "default": "󰕾",
      "hands-free": "󰋎",
      "headphone": "󰋋",
      "headset": "󰋎",
      "phone": "󰏲",
      "portable": "󰏲"
    },
    "format-muted": "󰝟",
    "format-source": "󰍬",
    "format-source-muted": "󰍭",
    "on-click": "waybar-slider-popup volume",
    "on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "pavucontrol",
    "scroll-step": 5,
    "tooltip": true,
    "tooltip-format": "{desc}\nVolume: {volume}%"
  },
  "spacing": 0,
  "tray": {
    "icon-size": 18,
    "show-passive-items": true,
    "spacing": 16
  }
}
